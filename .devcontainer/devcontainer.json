{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "rosdev",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "rosdev"
        }
    },
    "workspaceFolder": "/home/rosdev/executive_overlord",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/rosdev/executive_overlord,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros",
                "charliermarsh.ruff",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode-remote.vscode-remote-extensionpack",
                "ms-vsliveshare.vsliveshare",
                "redhat.vscode-yaml"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    ],
    "postCreateCommand": "sh ./.devcontainer/postcreate.sh"
}